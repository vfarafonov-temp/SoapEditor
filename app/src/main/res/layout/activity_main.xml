<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				xmlns:tools="http://schemas.android.com/tools"
				xmlns:custom="http://schemas.android.com/apk/res-auto"
				android:id="@+id/root_layout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="@dimen/activity_horizontal_margin"
				android:paddingRight="@dimen/activity_horizontal_margin"
				android:paddingTop="@dimen/activity_vertical_margin"
				android:paddingBottom="@dimen/activity_vertical_margin"
				tools:context=".MainActivity">

	<ImageView
		android:id="@+id/iv_background_image"
		android:layout_width="@dimen/back_image_width"
		android:layout_height="@dimen/back_image_height"
		android:src="@drawable/android_cool"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:scaleType="centerCrop"/>

	<Button
		android:id="@+id/btn_change_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/iv_background_image"
		android:text="Change text"/>

	<FrameLayout
		android:id="@+id/color_picker_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/btn_change_text"
		android:background="@android:color/holo_green_light">
		<com.weezlabs.soapeditor.ColorPicker
			android:id="@+id/color_picker"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			custom:line_thickness="10dp"
			custom:picker_radius="15dp"
			custom:progress="0.5"
			android:padding="5dp"/>
	</FrameLayout>

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/color_picker_layout"
		android:background="@android:color/holo_blue_bright">
		<TextView
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="Place for font picker"
			android:gravity="center"/>
	</FrameLayout>

</RelativeLayout>
